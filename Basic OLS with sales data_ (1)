   "source": [
    "#sm model\n",
    "\n",
    "x = df[['TV', 'Radio','Newspaper']]\n",
    "sm.add_constant(x)\n",
    "\n",
    "y=df['Sales']\n",
    "\n",
    "olsmod = sm.OLS(y,x)\n",
    "olsres = olsmod.fit()\n",
    "print(olsres.summary())"
   ]
